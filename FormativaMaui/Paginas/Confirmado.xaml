<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormativaMaui.Paginas.Confirmado"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">
    <VerticalStackLayout
        VerticalOptions="Center"
 Padding="20">
        <Frame CornerRadius="10" BorderColor="Red" HeightRequest="300" WidthRequest="300" Padding="20" BackgroundColor="Black" Margin="10" HorizontalOptions="Center" VerticalOptions="Center">
            <StackLayout>
                <Label Text="Compra realizada com sucesso!!"
               FontSize="Title"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Text="Voltar"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    FontSize="30"
                    HeightRequest="60"
                    WidthRequest="130"
                    VerticalOptions="Center"
                    Clicked="OnConfirmed" />
                </StackLayout>
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>